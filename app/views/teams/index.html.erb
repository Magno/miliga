<h1>Equipos</h1>

<table>
  <tr>
    <th>Nombre</th>
  </tr>

<% @teams.each do |team| %>
  <tr>

    <td><%= link_to team.teamname, team %></td>
    <td><%= link_to 'Editar', edit_team_path(team) %></td>
    <td><%= link_to 'Borrar', team, :confirm => 'Estas seguro que deseas borrar el equipo?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Equipo', new_team_path %>
