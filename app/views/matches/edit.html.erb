<h1>Editar Encuentro</h1>

<% form_for(@match) do |f| %>
  <%= f.error_messages %>

  <p>
    <label for= ":localteam" > Equipo Local</label><br />
    <%= f.text_field :localteam %>
  </p>
  <p>
    <label for= ":visitteam" > Equipo Visitante</label><br />
    <%= f.text_field :visitteam %>
  </p>
  <p>
    <label for= ":matchdate" >Fecha del Encuentro</label><br />
    <%= f.date_select :matchdate %>
  </p>
  <p>
    <label for= ":matchtime" > Hora del encuentro</label><br />
    <%= f.datetime_select :matchtime %>
  </p>
  <p>
    <%= f.submit 'Guardar' %>
  </p>
<% end %>


<%= link_to 'Regresar a encuentros', matches_path %>
