<h1>Torneos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Fecha de inicio</th>
    <th>Fecha de fin</th>
  </tr>

<% @tournaments.each do |tournament| %>
  <tr>
    <td><%= link_to tournament.tournamentname, tournament %></td>
    <td><%=h tournament.startdate %></td>
    <td><%=h tournament.enddate %></td>
    <td><%= link_to 'Editar', edit_tournament_path(tournament) %></td>
    <td><%= link_to 'Borrar', tournament, :confirm => 'Esta seguro que desea borrar el torneo?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Torneo', new_tournament_path %>
