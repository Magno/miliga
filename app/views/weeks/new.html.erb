<h1>Agregar Jornada</h1>

<% form_for(@week) do |f| %>
  <%= f.error_messages %>

<%= f.hidden_field :tournament_id %>

  <p>
    <label for= "startdate"> Fecha de inicio: </label><br/>
    <%= f.date_select :startdate %>
  </p>
  <p>
    <label for= "enddate"> Fecha de fin: </label><br/>
    <%= f.date_select :enddate %>
  </p>
  <p>
    <%= f.submit 'Crear' %>
  </p>
<% end %>

<%= link_to 'Regresar a Jornadas', weeks_path %>
